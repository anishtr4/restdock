{
    "info": {
        "_postman_id": "dummy-advanced-123",
        "name": "RestDock Value Pack",
        "description": "A comprehensive collection to test folders, scripts, auth, variables, and saved examples.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://echo.getpostman.com",
            "type": "string"
        },
        {
            "key": "userId",
            "value": "123",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth Tests",
            "item": [
                {
                    "name": "Public Endpoint",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/get",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "get"
                            ]
                        }
                    },
                    "response": [
                        {
                            "name": "200 Success",
                            "status": "OK",
                            "code": 200,
                            "_postman_previewlanguage": "json",
                            "header": [],
                            "body": "{\n  \"args\": {},\n  \"headers\": {\n    \"x-forwarded-proto\": \"https\",\n    \"host\": \"postman-echo.com\"\n  }\n}"
                        }
                    ]
                },
                {
                    "name": "Protected Endpoint (Bearer)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "super-secret-token",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/auth/bearer",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "bearer"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Scripting Tests",
            "item": [
                {
                    "name": "Set Environment Var",
                    "event": [
                        {
                            "listen": "prerequest",
                            "script": {
                                "exec": [
                                    "console.log('Running Pre-request script');",
                                    "pm.environment.set('timestamp', new Date().toISOString());"
                                ],
                                "type": "text/javascript"
                            }
                        },
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status is 200', function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/get?time={{timestamp}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "get"
                            ],
                            "query": [
                                {
                                    "key": "time",
                                    "value": "{{timestamp}}"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Edge Case Examples",
            "item": [
                {
                    "name": "HTML Response",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/html",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "html"
                            ]
                        }
                    },
                    "response": [
                        {
                            "name": "Rendered HTML",
                            "status": "OK",
                            "code": 200,
                            "_postman_previewlanguage": "html",
                            "header": [],
                            "body": "<html><body><h1>Hello World</h1><p>This is a saved HTML example.</p></body></html>"
                        }
                    ]
                },
                {
                    "name": "Empty Body 204",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/delete",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "delete"
                            ]
                        }
                    },
                    "response": [
                        {
                            "name": "204 No Content",
                            "status": "No Content",
                            "code": 204,
                            "_postman_previewlanguage": "text",
                            "header": [],
                            "body": null
                        }
                    ]
                }
            ]
        }
    ]
}